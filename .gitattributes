# Auto detect text files and perform LF normalization
* text=auto

# Source code files
*.java text eol=lf
*.kt text eol=lf
*.scala text eol=lf
*.groovy text eol=lf

# Configuration files
*.properties text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.json text eol=lf
*.graphql text eol=lf
*.graphqls text eol=lf
*.sql text eol=lf

# Script files
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

# Windows scripts (keep CRLF)
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Maven wrapper (keep LF for cross-platform compatibility)
mvnw text eol=lf
mvnw.cmd text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.adoc text eol=lf
*.rst text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf

# Mark files as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.jar binary
*.war binary
*.ear binary
*.class binary
*.so binary
*.dll binary
*.exe binary
*.dylib binary

# Log files (if accidentally tracked)
*.log text eol=lf

# Git attributes file itself
.gitattributes text eol=lf
.gitignore text eol=lf
